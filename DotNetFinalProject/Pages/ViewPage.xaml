<Page x:Class="DotNetFinalProject.Pages.ViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DotNetFinalProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewPage">

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Labels-->
        <Label Grid.Row="0" Content="CLICK TO VIEW A CONTACT" Style="{StaticResource labelTitle}"/>
        <ScrollViewer Grid.Row="1">
            <Button RenderSize="10,10" Content="Text"/>
        </ScrollViewer>

        <!--Input-->

        <!--Button-->
    </Grid>
</Page>
