<Page x:Class="DotNetFinalProject.Pages.ViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DotNetFinalProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewPage">

    <Grid Background="White">

        <StackPanel Margin="10">

            <Label Content="Contact List" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock x:Name="FirstNameBox" Width="300" FontSize="32" HorizontalAlignment="Center"/>
            <TextBlock x:Name="LastNameBox" Width="300" FontSize="32" HorizontalAlignment="Center"/>
            <TextBlock x:Name="EmailBox" Width="300" FontSize="32" HorizontalAlignment="Center"/>
            <TextBlock x:Name="PhoneBox" Width="300" FontSize="32" HorizontalAlignment="Center"/>

        </StackPanel>

    </Grid>
</Page>
